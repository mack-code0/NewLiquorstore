<%- include("../includes/header.ejs", {pageTitle}) %>
  </head>
  <body>

	<%- include("../includes/top-nav.ejs") %>
	
	<%- include("../includes/main-nav.ejs") %> 
    
    <section class="hero-wrap hero-wrap-2" style="background-image: url('/images/bg_2.jpg');" data-stellar-background-ratio="0.5">
      <div class="overlay"></div>
      <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
          <div class="col-md-9 ftco-animate mb-5 text-center">
          	<p class="breadcrumbs mb-0"><span class="mr-2"><a href="index.html">Home <i class="fa fa-chevron-right"></i></a></span> <span>Signup <i class="fa fa-chevron-right"></i></span></p>
            <h2 class="mb-0 bread">Signup</h2>
          </div>
        </div>
      </div>
    </section>

    <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center">
          <div class="col-xl-10 ftco-animate">

			<% if(errorMessage){ %> 
				<%- include("../includes/message.ejs", {messageType: "danger", successMessage: null})  %> 
			<% } %>
			<form method="POST" action="/signup" class="billing-form">
	          	<div class="row align-items-end">
					<div class="w-100"></div>
					<div class="col-md-12">
						<div class="form-group">
							<label for="emailaddress">Email Address</label>
						  <input value="<%= oldInput.email %>" type="email" name="email" class="form-control<%= validationErrors.find(e=>e.param=="email")?" invalid-input" : "" %>" placeholder="Email Address">
						</div>
					</div>
		            <div class="col-md-12">
		            	<div class="form-group">
                            <label for="password">Password</label>
                            <input value="<%= oldInput.password %>" type="password" class="form-control<%= validationErrors.find(e=>e.param=="password")?" invalid-input" : "" %>" name="password" placeholder="* * * * * *">
	                    </div>
		            </div>
                    <div class="col-md-12">
		            	<div class="form-group">
                            <label for="password">Confirm Password</label>
                            <input value="<%= oldInput.confirmPassword %>" type="password" class="form-control<%= validationErrors.find(e=>e.param=="confirmPassword")?" invalid-input" : "" %>" name="confirmPassword" placeholder="* * * * * *">
	                    </div>
		            </div>
                <div class="w-100"></div>
                <div class="col-md-12">
                	<div class="form-group mt-4">
                		<div class="radio">
                			<label class="mr-3"> Already have an Account? <a href="/login" class="">Login</a></label>
                		</div>
                	</div>
                </div>
				</div>
				<input type="hidden" name="_csrf" value="<%= csrfToken %>">
				<button class="btn btn-primary py-3 px-5">Signup</button>
	          </form><!-- END -->

          </div> <!-- .col-md-8 -->
        </div>
    	</div>
    </section>

	<%- include("../includes/footer.ejs") %> 
    <%- include("../includes/loader.ejs") %> 
	<%- include("../includes/scripts.ejs") %> 	
    
  </body>
</html>